<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.roney.timhortons.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:background="@color/colorPrimaryDark"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tim_hortons"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDescription"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/tim_hortons_donuts"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAddress"
        android:text="@string/address"
        android:textAlignment="center"
        android:textColor="@color/colorAddressText"
        android:textSize="20sp"/>

</LinearLayout>
